@page
@model RegisterModel

@{
    ViewData["Title"] = "Register";
    ViewData["BodyClass"] = "login-page";
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/styles.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<div class="container-fluid vh-100 d-flex align-items-center">
    <div class="row g-0 w-100">
        <!-- Left Section -->
        <div class="col-lg-6 d-flex align-items-center justify-content-center bg-transparent">
            <div class="text-start px-5">
                <h1 class="display-3 fw-bold mb-4">
                    <span class="d-block text-white">Join the Creative Revolution</span>
                </h1>
                <p class="lead text-light opacity-75">
                   Get Started with AI Video Creation! </span>
                </p>
            </div>
        </div>

        <!-- Right Section -->
        <div class="col-lg-6 position-relative login-section">
            <!-- Image Positioned Above Form -->
            <img src="~/assets/3.png" alt="Decorative Icon" class="position-absolute high-res-image" 
                 style="top: -80px; right: 20px; width: 120px;">

            <div class="d-flex flex-column justify-content-center h-100 px-5">
                <div class="glass-card p-5 rounded-4 position-relative">
                    <div class="mb-5">
                        <h2 class="text-light mb-3">Create Your Account</h2>
                        <p class="text-light-50 mb-0">Sign up in seconds and start turning your images into stunning AI videos</p>
                    </div>

                    <form method="post">
                        <div class="mb-4">
                            <label class="form-label text-light">Email</label>
                            <input asp-for="Email" class="form-control bg-transparent text-light border-light" required>
                            <span asp-validation-for="Email" class="text-danger small d-block mt-1"></span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label text-light">Password</label>
                            <div class="input-group">
                                <input asp-for="Password" type="password" class="form-control bg-transparent text-light border-light" id="password" required>
                                <button type="button" class="btn btn-outline-light" id="togglePassword">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Password" class="text-danger small d-block mt-1"></span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label text-light">Confirm Password</label>
                            <div class="input-group">
                                <input asp-for="ConfirmPassword" type="password" class="form-control bg-transparent text-light border-light" id="confirmPassword" required>
                                <button type="button" class="btn btn-outline-light" id="toggleConfirmPassword">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger small d-block mt-1"></span>
                        </div>

                        <!-- Terms and Conditions Checkbox -->
                        <div class="form-check mb-4">
                            <input type="checkbox" class="form-check-input" id="termsCheckbox" required>
                            <label class="form-check-label text-light small" for="termsCheckbox">
                                I agree to the <a href="#" class="text-primary">Terms of Service</a> and <a href="#" class="text-primary">Privacy Policy</a>
                            </label>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 py-3 fw-bold">Sign Up</button>
                    </form>

                    <div class="d-flex justify-content-between mt-4">
                        <span class="text-light small">
                            Already have an account?
                            <a asp-page="/Index" class="text-primary text-decoration-none">Log-in here</Log-in></a>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    document.getElementById('togglePassword').addEventListener('click', function() {
        const password = document.getElementById('password');
        const icon = this.querySelector('i');
        password.type = password.type === 'password' ? 'text' : 'password';
        icon.classList.toggle('fa-eye-slash');
    });
    
    document.getElementById('toggleConfirmPassword').addEventListener('click', function() {
        const confirmPassword = document.getElementById('confirmPassword');
        const icon = this.querySelector('i');
        confirmPassword.type = confirmPassword.type === 'password' ? 'text' : 'password';
        icon.classList.toggle('fa-eye-slash');
    });
</script>
}
