@page
@model IndexModel
@{
    ViewData["Title"] = "Home Page";
    ViewData["BodyClass"] = "login-page";
    Layout = "_Layout"; // Apply layout
}

<!-- Link the external CSS -->
<link rel="stylesheet" href="~/css/styles.css" />

<!-- Main Section with Split Layout -->
<div class="container d-flex align-items-center justify-content-center vh-100">
    <div class="row w-100">
        <!-- Left Side: Text Content -->
        <div class="col-md-6 d-flex flex-column justify-content-center text-white text-start">
            <div class="hero-container">
                <h1 class="hero-heading">
                    <span class="gradient-text text-start d-block display-1">Welcome<br>Back!</span>
                </h1>
            </div>
            <span class="subtitle text-light text-start fs-7 fixed-line-break">
                Ready to create your next <br> AI-powered video?
            </span>
        </div>

        <!-- Right Side: Login Form -->
        <div class="col-md-6 d-flex flex-column align-items-center justify-content-center login-page position-relative">
            <!-- Image at the top right corner -->
            <img src="~/assets/3.png" alt="Category Image" class="position-absolute top-0 end-0 p-3" style="max-width: 100px; max-height: 100px;" />
            
            <div class="login-card w-100 p-4">
                <!-- Log-In Header with Description -->
                <div class="d-flex justify-content-between align-items-start w-100">
                    <h2 class="text-white">Log-In</h2>
                    <p class="text-light text-start small">
                        Enter your credentials to access<br> 
                        your dashboard and start generating videos
                    </p>
                </div>

                <form method="post" asp-page-handler="Login">
                    <div class="mb-3">
                        <label for="username" class="form-label text-white">Username</label>
                        <input type="text" class="form-control bg-dark text-white border-0" id="username" name="username" required />
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label text-white">Password</label>
                        <div class="input-group">
                            <input type="password" class="form-control bg-dark text-white border-0" id="password" name="password" required />
                            <button class="btn btn-outline-secondary bg-dark text-white" type="button" id="togglePassword">
                                <i class="fas fa-eye"></i> <!-- FontAwesome Eye Icon -->
                            </button>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Log-In</button>
                </form>

                <!-- Forgot Password and Register Links -->
                <div class="mt-3 d-flex justify-content-between w-100">
                    <a href="/ForgotPassword" class="text-light small">Forgot Password?</a>
                    <p class="text-white mb-0">Don'text have an account? 
                        <a asp-page="/Register" class="text-primary text-decoration-none">Register here</a>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Display Login Message -->
    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-info mt-3" style="max-width: 400px;">
            @Model.Message
        </div>
    }
</div>

<!-- Link the external JavaScript -->
<script src="~/js/script.js"></script>
<script>
    document.getElementById('togglePassword').addEventListener('click', function () {
        var passwordInput = document.getElementById('password');
        var icon = this.querySelector('i');
        if (passwordInput.type === 'password') {
            passwordInput.type = 'text';
            icon.classList.remove('fa-eye');
            icon.classList.add('fa-eye-slash');
        } else {
            passwordInput.type = 'password';
            icon.classList.remove('fa-eye-slash');
            icon.classList.add('fa-eye');
        }
    });
</script>
