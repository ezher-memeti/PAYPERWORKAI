@page
@model IndexModel
@{
    ViewData["Title"] = "Home Page";
    ViewData["BodyClass"] = "login-page";
    Layout = "_Layout";  // Set the class for login page only
}
<link rel="stylesheet" href="~/css/styles.css" />

<section class="text-center text-white mt-5">
        
        
        <h2 class="subtitle mb-0">Bring Your Vision to Life with AI-Generated Videos</h2>
        <!-- Main Heading with Sparkles -->
        <div class="hero-container">
            <h1 class="hero-heading">
                <span class="gradient-text d-block display-1">Join The Creative</span> 
                <span class="gradient-text d-block display-1">Revolution</span>
            </h1>
        </div>
        
</section>


<div class="container mt-2 mb-5 d-flex flex-column align-items-center justify-content-center login-page">
    <!-- Login Card -->
    <div class="login-card">
        <h2 class="text-center text-white mb-3">Login</h2>

        <form method="post" asp-page-handler="Login">
            <div class="mb-3">
                <label for="username" class="form-label text-white">Username</label>
                <input type="text" class="form-control bg-dark text-white border-0" id="username" name="username" required />
            </div>

            <div class="mb-3">
                <label for="password" class="form-label text-white">Password</label>
                <input type="password" class="form-control bg-dark text-white border-0" default="Password" id="password" name="password" required />
            </div>

            <button type="submit" class="btn btn-primary w-100">Login</button>
        </form>
    </div>

    <!-- Display Login Message -->
    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert alert-info mt-3" style="max-width: 400px;">
            @Model.Message
        </div>
    }
</div>
