@page
@model MyRazorApp.Pages.HomeModel
@{
    ViewData["Title"] = "Home";
}

<div class="text-center">
    <h1 class="display-4">Welcome to the Home Page</h1>
    <p>You are logged in as: <strong>@Model.Username</strong></p>

    <!-- Buttons for Choices -->
    <div class="d-grid gap-3">
        <a class="btn btn-primary btn-lg" asp-page="/Cinematic">Cinematic</a>
        <a class="btn btn-secondary btn-lg" asp-page="/Fashion">Fashion</a>
        <a class="btn btn-success btn-lg" asp-page="/Food">Food</a>
        <a class="btn btn-danger btn-lg" asp-page="/Architecture">Architecture</a>
        <a class="btn btn-warning btn-lg" asp-page="/ScienceFiction">Science Fiction</a>
        <a class="btn btn-info btn-lg" asp-page="/PersonalVideo">Personal Video</a>
        <a class="btn btn-dark btn-lg" asp-page="/Cars">Cars</a>
    </div>

    <!-- Logout Button -->
    <form method="post" asp-page-handler="Logout" class="mt-4">
        <button type="submit" class="btn btn-danger">Logout</button>
    </form>
</div>