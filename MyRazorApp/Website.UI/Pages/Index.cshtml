@page
@model IndexModel
@{
    ViewData["Title"] = "Home Page";
    ViewData["BodyClass"] = "login-page";
    Layout = "_Layout";
}

<link rel="stylesheet" href="~/css/styles.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<div class="container-fluid vh-100 d-flex align-items-center">
    <div class="row g-0 w-100">
        <!-- Left Section -->
       <div class="col-lg-6 d-flex align-items-center justify-content-center bg-transparent">
            <div class="text-start px-5">
                <h1 class="display-3 fw-bold mb-4">
                    <span class="d-block text-white">Welcome</span> <!-- text-white eklendi -->
                    <span class="d-block text-white">Back!</span>   <!-- text-white eklendi -->
                </h1>
                <p class="lead text-light opacity-75">
                    Ready to create your next<br>
                    <span class="text-white">AI-powered video?</span> <!-- text-white eklendi -->
                </p>
            </div>
        </div>

<!-- Right Section -->
<div class="col-lg-6 position-relative login-section">
    <!-- Larger Image Positioned Above Login -->
    <img src="~/assets/3.png" alt="Decorative Icon" class="position-absolute high-res-image" 
         style="top: -80px; right: 20px; width: 120px;">

    <div class="d-flex flex-column justify-content-center h-100 px-5">
        <div class="glass-card p-5 rounded-4 position-relative">
            <div class="mb-5">
                <h2 class="text-light mb-3">Log In</h2>
                <p class="text-light-50 mb-0">Enter your credentials to access your dashboard and start generating videos</p>
            </div>

            <form method="post" asp-page-handler="Login">
                <div class="mb-4">
                    <label class="form-label text-light">Username</label>
                    <input type="text" class="form-control bg-transparent text-light border-light" name="username" required>
                </div>

                <div class="mb-5">
                    <label class="form-label text-light">Password</label>
                    <div class="input-group">
                        <input type="password" class="form-control bg-transparent text-light border-light" id="password" name="password" required>
                        <button type="button" class="btn btn-outline-light" id="togglePassword">
                            <i class="fas fa-eye"></i>
                        </button>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary w-100 py-3 fw-bold">Log In</button>
            </form>

            <div class="d-flex justify-content-between mt-4">
                <a href="#" class="text-light text-decoration-none small">Forgot Password?</a>
                <span class="text-light small">
                    Don't have an account? 
                    <a href="/register" class="text-primary text-decoration-none">Sign Up</a>
                </span>
            </div>
        </div>
    </div>
</div>


@section Scripts {
<script>
    document.getElementById('togglePassword').addEventListener('click', function() {
        const password = document.getElementById('password');
        const icon = this.querySelector('i');
        password.type = password.type === 'password' ? 'text' : 'password';
        icon.classList.toggle('fa-eye-slash');
    });
</script>
}